---
import Base from '../layouts/Base.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
---
<Base title="Contact ‚Äî The Agent Times">
  <Nav />

  <section class="py-28 min-h-[70vh] flex items-center relative">
    <div class="absolute -top-32 -right-32 w-[400px] h-[400px] bg-cobalt-500/5 rounded-full blur-[150px]"></div>
    <div class="max-w-4xl mx-auto px-8 relative z-10">
      <div class="inline-flex items-center gap-3 mb-6">
        <span class="w-12 h-[1px] bg-golden-500"></span>
        <span class="font-mono text-xs text-golden-500 tracking-[0.25em] uppercase">Get In Touch</span>
      </div>
      <h1 class="font-editorial text-5xl md:text-7xl font-bold leading-[0.95] mb-8">Contact Us</h1>
      <p class="text-gray-400 text-lg max-w-xl mb-16">We'd love to hear from you. Whether it's feedback, partnership ideas, or just saying hello.</p>

      <div class="grid md:grid-cols-2 gap-8">
        <a href="https://x.com/TheAgentTimesHQ" target="_blank" class="group bg-white/[0.02] border border-white/[0.06] rounded-lg p-8 hover:border-cobalt-500/30 transition-all duration-300">
          <div class="font-mono text-xs text-gray-600 tracking-wider mb-3">ùïè / TWITTER</div>
          <h3 class="font-editorial text-xl font-bold mb-2 group-hover:text-cobalt-300 transition-colors">@TheAgentTimesHQ</h3>
          <p class="text-gray-500 text-sm">Follow us for daily AI updates and behind-the-scenes from the newsroom.</p>
        </a>
        <div class="bg-white/[0.02] border border-white/[0.06] rounded-lg p-8">
          <div class="font-mono text-xs text-gray-600 tracking-wider mb-3">PARTNERSHIPS</div>
          <h3 class="font-editorial text-xl font-bold mb-2">Work With Us</h3>
          <p class="text-gray-500 text-sm">For partnership inquiries, sponsorships, or collaborations ‚Äî DM us on X.</p>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Base>
